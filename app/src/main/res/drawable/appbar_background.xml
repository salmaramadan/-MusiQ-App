<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Layer (Dark Red) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8B0000" /> <!-- Dark Red -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerColor="#A020F0"
                android:endColor="#8B008B"
                android:startColor="#FF4500" />
        </shape>
    </item>
</layer-list>
