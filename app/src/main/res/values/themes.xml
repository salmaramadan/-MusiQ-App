<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MUSIQAL" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#D75127</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D75127</item>
        <item name="colorSecondaryVariant">#D75127</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">#D75127</item>
    </style>

    <style name="WhiteButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlHighlight">#D75127</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="BlackButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="MediaPlayerSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:progressTint">#D75127</item>
        <item name="android:thumbTint">#D75127</item>
    </style>

    <style name="GrayButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#D75127</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D75127</item>
        <item name="colorSecondaryVariant">#D75127</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="GrayET" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D75127</item>
        <item name="colorPrimaryVariant">#D75127</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D75127</item>
        <item name="colorSecondaryVariant">#D75127</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Home" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">#D75127</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D75127</item>
        <item name="colorSecondaryVariant">#D75127</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">#D75127</item>
    </style>

    <style name="TextAppearance.HomeTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#D75127</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.HomeSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#D75127</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>
